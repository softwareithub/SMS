@model SERP.Core.Model.TransactionViewModel.TimeSheetVm

<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <table id="tblDataList" class="table table-hover table-striped table-info" style="width:100%;" border="1">
                        <thead>
                            <tr>
                                <th>Days</th>
                                @foreach (var period in Model.TimeTableModels)
                                {
                                    foreach (var prd in period.PeriodModels)
                                    {
                                        <th>
                                            @prd.Period
                                        </th>
                                    }
                                    break;
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int k = 0;
                                foreach (var days in Model.TimeTableModels)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" asp-for="TimeTableModels[k].DayName" />
                                            @days.DayName
                                        </td>
                                        @foreach (var period in Model.TimeTableModels.Where(x => x.DayName == days.DayName))
                                        {
                                            int i = 0;
                                            @foreach (var prd in period.PeriodModels)
                                            {
                                                <td>

                                                    @Html.SerpImageHelper(prd.Photo, 120, 120, "TeacherId")
                                                    @if (prd.TeacherAttendence == "P")
                                                    {
                                                        <div class="led-box">
                                                            <div class="led-blue"></div>
                                                            <p>Present</p>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="led-box">
                                                            <div class="led-red"></div>
                                                            <a onclick="AssignTeacher(@prd.TimeTableId,'@prd.FromTime','@prd.ToTime')">Assign</a>
                                                        </div>

                                                    }

                                                    <h1>@prd.CourseName @prd.BatchName</h1>
                                                    <p>@prd.FromTime to @prd.ToTime</p>
                                                    <p>@prd.SubjectName</p>
                                                    <p>@prd.TeacherAttendence</p>
                                                    <p>@prd.EmployeeName</p>
                                                    <p>@prd.Phone</p>
                                                </td>
                                                i++;
                                            }

                                        }
                                    </tr>
                                    k++;
                                }
                            }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>
        @await Html.PartialAsync("~/Views/Shared/_CommanModalPartial.cshtml")
    </div>
</section>
<script>
    function AssignTeacher(id, fromTime, toTime) {
        $("#loading").removeAttr('style');
        $.get("/TimeTable/AssignEmployee", { timeTableId: id, fromTime: fromTime, toTime: toTime }, function (response) {
            $("#divPartialData").html(response);
            $("#divModalPop").modal('show');
            $("#modalTitle").html("Assign Employee For this class.")
            setTimeout(function () {
                $("#tblDataList").DataTable({
                    fixedHeader: true,
                    select: true,
                    responsive: true
                });
            }, 300)
        }).done(function () {
            $("#loading").attr('style', 'display:none');
        });
    }
</script>

