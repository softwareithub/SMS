<section class="content-header">
    <h1>
       Time Table Details
        <small>Course Wise Time Table Details</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>


<section class="content">
    <div class="row">

        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Time Table Details</h3>
                </div>
                <div class="box-body">
                    <form method="get" data-ajax="true" data-ajax-method="post"
                          asp-action="GetTimeTable" asp-controller="TimeTable" data-ajax-success="TimeTableInfo">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Course Name</label>
                                <select id="CourseId" class="form-control" asp-items="@(new SelectList(ViewBag.CourseList ,"Id","Name"))" onchange="GetBatchList()">
                                    <option value="">Select</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label >Batch Name</label>
                                <select id="BatchId" class="form-control" onchange="GetTimeSheetDetails()">
                                    <option value="">Select</option>
                                </select>
                            </div>
                        </div>
                    </form>
                    <div class="col-md-12" id="divTimeTable">

                    </div>
                </div>
                <div class="box-footer">

                </div>

            </div>
        </div>
    </div>
</section>

<script>
    function GetBatchList() {
        
        var courseId = $("#CourseId option:selected").val();
        $.get("/StudentMaster/GetBatchList", { courseId: courseId }, function (responseData) {
            $.each(responseData, function (index, value) {
                $('#BatchId').append($('<option></option>').text(value.batchName).attr('value', value.id));
            });
        });
    }

    function GetTimeSheetDetails() {
        var courseId = $("#CourseId").val();
        var batchId = $("#BatchId").val();
        $.get("/TimeTable/GetTimeSheet", { courseId: courseId, batchId: batchId }, function (response) {
            $("#divTimeTable").html(response);
        });
    }
</script>