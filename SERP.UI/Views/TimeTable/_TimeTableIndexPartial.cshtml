@model SERP.Core.Entities.Entity.Core.Transaction.TimeTableMasterModel
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<link href="~/Multiselect/example-styles.css" rel="stylesheet" />
<script src="~/Multiselect/jquery.multi-select.js"></script>

<section class="content-header">
    <h1>
        Student Master
        <small>Create Caste Detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>


<section class="content">
    <div class="row">

        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Class Time Table Details</h3>
             
                </div>
                <div class="box-body">
                    <form method="get" data-ajax="true" data-ajax-method="post"
                          asp-action="GetTimeTable" asp-controller="TimeTable" data-ajax-success="TimeTableInfo">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="CourseId">Course Name</label>
                                <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(ViewBag.CourseList ,"Id","Name"))" onchange="GetBatchList()">
                                    <option value="">Select</option>
                                </select>
                                <span asp-validation-for="CourseId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="BatchId">Batch Name</label>
                                <select asp-for="BatchId" class="form-control" onchange="IsTimeSheetExists()">
                                    <option value="">Select</option>
                                </select>
                                <span asp-validation-for="BatchId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Periods</label>
                                <select class="form-control" asp-for="Periods">
                                    <option value="">Select</option>
                                    @for (int i = 1; i < 11; i++)
                                    {
                                        <option value=@i>@i - Periods </option>
                                    }

                                </select>
                                <span asp-validation-for="Periods" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Select Days</label>
                                <select id="modal-example" multiple class="form-control" asp-for="Days">
                                    @for (int i = 0; i < 7; i++)
                                    {
                                        <option value="@i">@(((DayOfWeek)i).ToString())</option>
                                    }
                                </select>
                                <span asp-validation-for="Days" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right">Create Time Table</button>
                        </div>
                    </form>
                    <div class="col-md-12" id="divTimeTable">

                    </div>
                </div>
                <div class="box-footer">

                </div>

            </div>
        </div>
    </div>
</section>

<script type="text/javascript">

    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
        // GetAssignFeeDetails();
    });

    $('#modal-example').multiSelect({
        'modalHTML': '<div class="multi-select-modal">'
    });

    function TimeTableInfo(response) {
        $("#divTimeTable").html(response);
    }

    function GetBatchList() {
        
        var courseId = $("#CourseId option:selected").val();
        $.get("/StudentMaster/GetBatchList", { courseId: courseId }, function (responseData) {
            $.each(responseData, function (index, value) {
                $('#BatchId').append($('<option></option>').text(value.batchName).attr('value', value.id));
            });
        });
    }
    function IsTimeSheetExists() {
        debugger
        var courseId = $("#CourseId").val();
        var batchId = $("#BatchId").val();
        $.get("/TimeTable/CheckTimeSheetAvailable", { courseId: courseId, batchId: batchId }, function (responseData) {
            if (responseData == "0") {

            }
            else {
                if (confirm(responseData)) {
                    $.get("/TimeTable/DeActivateTimeSheet", { courseId: courseId, batchId: batchId }, function (response) {
                        alertify.success(response);
                    });
                }
                else {
                    $.get("/TimeTable/GetTimeSheetDetail", { courseId: courseId, batchId: batchId }, function (response) {
                        $("#divTimeTable").html(response);
                    });
                }
            }
        })
    }

</script>