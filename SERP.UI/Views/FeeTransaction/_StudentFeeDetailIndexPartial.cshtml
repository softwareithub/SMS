<section class="content-header">
    <h1>
        Academic Master
        <small>Create Academic Detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>


<section class="content">
    <div class="row">

        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Create Academic Master</h3>
                </div>
                <div class="overlay divHidding" id="divFormData">
                    <i class="fa fa-refresh fa-spin">

                    </i>
                </div>

                <div class="box-body">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Student Name</label>
                            <input id="studentName" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Student Phone</label>
                            <input id="phone" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label> Roll Code</label>
                            <input id="rollCode" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Registration Number</label>
                            <input id="registration" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">

                            <input type="button" class="btn btn-primary pull-right" onclick="SearchData()" value="Search" />
                        </div>
                    </div>

                </div>
            </div>
        </div>

        @await Html.PartialAsync("~/Views/Shared/_CommanModalPartial.cshtml")

    </div>
</section>
<script>
    function SearchData() {
        debugger;
        var studentName = $("#studentName").val();
        var phone = $("#phone").val();
        var rollCode = $("#rollCode").val();
        var registration = $("#registration").val();

        $.get("/StudentFeeDetail/GetStudentDetail", {
            name: studentName, phone: phone,
            rollCode: rollCode, registration: registration
        }, function (responseData) {
            $("#divPartialData").html(responseData);
            $("#divModalPop").modal('show');
            setTimeout(function () {
                $("#modalTitle").text("Student Information")
            }, 300);
        })
    }
</script>