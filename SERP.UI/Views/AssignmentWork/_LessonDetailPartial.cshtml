@model IEnumerable<SERP.Core.Model.LessonMasterDetail.LessonMasterVm>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <table id="tblDataList" class="table-responsive-md table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Course Name</th>
                                    <th>Subject Name</th>
                                    <th>Lesson Name</th>
                                    <th>
                                        Action
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td>
                                            @data.CourseName
                                        </td>
                                        <td>
                                            @data.SubjectName
                                        </td>
                                        <td>
                                            @data.LessonName
                                        </td>
                                        <td>
                                            <a class="btn btn-outline-success pull-right"
                                               data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>"
                                               onclick="UpdateRecord(@data.LessonId, this)">
                                                <i class="fa fa-edit" style="color:#3C8DBC"></i>
                                            </a>
                                            <a class="btn btn-outline-danger pull-right"
                                               data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>"
                                               onclick="DeleteRecord(@data.LessonId, this)">
                                                <i class="fa fa-trash" style="color:#DD4B39"></i>

                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
<script>
    function DeleteRecord(id, event) {
        var geturl = "/LessonMaster/GetLessonDetails";
        var deleteUrl = "/LessonMaster/Delete";
        CustomDeleteRecord(id, geturl, deleteUrl, event);
    }
    function UpdateRecord(id, event) {

        var updateUrl = "/LessonMaster/CreateLesson";
        UpdateCustomRecord(id, updateUrl, event);
    }
</script>