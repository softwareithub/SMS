@model IEnumerable<SERP.Core.Model.AssignmentHomeModel.StudyMaterialModel>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Document Name</th>
                                <th>Description</th>
                                <th>Course Name</th>
                                <th>Batch Name</th>
                                <th>Subject</th>
                                <th>Document</th>
                                <th>Publish Date</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>
                                        @data.DocumentName
                                    </td>
                                    <td>
                                        @data.Description
                                    </td>
                                    <td>
                                        @data.CourseName
                                    </td>
                                    <td>
                                        @data.BatchName
                                    </td>
                                    <td>
                                        @data.SubjectName
                                    </td>
                                    <td>
                                        @{ var path = "/" + data.Path;}
                                        <a onclick="DisplayPDF('@data.Path')"> PDF
                                            <i class="fa fa-pdf"></i>
                                        </a>
                                    </td>
                                    <td>
                                        @{
                                            var publishDate = Convert.ToDateTime(data.PublishDate).ToShortDateString();
                                         }
                                        @publishDate
                                    </td>

                                    <td>
                                        <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="UpdateRecord(@data.Id, this)">
                                            <i class="fa fa-edit" style="color:#3C8DBC"></i>

                                        </a>

                                        <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="DeleteRecord(@data.Id, this)">
                                            <i class="fa fa-trash" style="color:#DD4B39"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    function DeleteRecord(id, event) {
        var geturl = "/StudyMaterial/GetDocuments";
        var deleteUrl = "/StudyMaterial/DeleteDocument";
        CustomDeleteRecord(id, geturl, deleteUrl, event);
    }
    function UpdateRecord(id, event) {
        var updateUrl = "/StudyMaterial/Index";
        UpdateCustomRecord(id, updateUrl, event);
    }
</script>

