@model IEnumerable<SERP.Core.Entities.HomeAssignment.LessonTopicMapping>
    <div class="panel panel-default">
        <div class="panel-heading">
            <span style="color:#ff6a00">Already Mapped Lesson Topics</span>
        </div>
        <div class="panel-body">
            <table  class="table table-striped table-bordered responsive" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Topic Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Expected Class
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var data in Model)
                    {
                    <tr>
                        <td>
                            @data.TopicName
                        </td>
                        <td>
                            @data.TopicDescription
                        </td>
                        <td>
                            @data.TopicDescription
                        </td>
                        <td>
                            <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="DeleteRecord(@data.Id, this)">
                                <i class="fa fa-trash" style="color:#DD4B39"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
