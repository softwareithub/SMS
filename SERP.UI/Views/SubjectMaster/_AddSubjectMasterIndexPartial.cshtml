@{
    ViewData["Title"] = "Index";
    Layout = null;

}
@model SERP.Core.Entities.Entity.Core.Transaction.SubjectMaster

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<section class="content-header">
    <h1>
        Subject Master
        <small>Add Subject To Course And Batch</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>


<section class="content">
    <div class="row">

        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Subject To Course And Batch</h3>
                    <a class="btn btn-primary pull-right" onclick="GetRecordList()">
                        <i class="fa fa-list-ul"></i>
                        List
                    </a>
                </div>
                <div class="box-body">
                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="Id" type="hidden" />
                            <input asp-for="CreatedBy" type="hidden" />
                            <input asp-for="CreatedDate" type="hidden" />
                            <label asp-for="CourseId">Select Course</label>
                            <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(ViewBag.CourseList ,"Id","Name"))" onchange="GetBatchList()">
                                <option value="">Select</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="BatchId">Select Batch</label>
                            <select asp-for="BatchId" class="form-control">
                                <option value="">Select</option>
                            </select>
                            <span asp-validation-for="BatchId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md=12">
                        <button type="button" id="btnAddSubject" class="btn btn-primary pull-right" onclick="AddSubject()">Add Subject</button>
                    </div>
                    <div class="col-md-12" id="_divSubject">

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script type="text/javascript">
    function GetBatchList() {
        var courseId = $("#CourseId option:selected").val();
        $.get("/StudentMaster/GetBatchList", { courseId: courseId }, function (responseData) {
            $.each(responseData, function (index, value) {
                $('#BatchId').append($('<option></option>').text(value.batchName).attr('value', value.id));
            });
        });
    }

    function AddSubject() {
        if ($("#CourseId option:selected").val() == "") {
            $("#CourseId").addClass("validation-error");
        }
        else {
            var courseId = $("#CourseId option:selected").val();
            var batchId = $("#BatchId option:selected").val();
            $.get("/SubjectMaster/AddSubjectPartial", { classId: courseId, batchId: batchId }, function (data) {
                $("#_divSubject").html(data);
                $("#btnAddSubject").hide();
                GetSubjectDataList();
            });
        }

    }

    function GetSubjectDataList() {
        debugger;
        var courseId = $("#CourseId option:selected").val();
        var batchId = $("#BatchId option:selected").val();
        $.get("/SubjectMaster/GetSubjectDatList", { courseId: courseId, batchId: batchId }, function (data) {
            $.each(data, function (index, value) {
                debugger
                var markup = "<tr>";
                markup += '<td><input type="text" id="subjectcode" readonly name="subjectcode" placeholder="subject code" value='+value.subjectCode+' class="form-control"></td>';
                markup += '<td><input type="text" id="subjectname" readonly name="subjectname" placeholder="subject name" value='+value.subjectName+' class="form-control"></td>';
                markup += '<td><input type="text" id="subjectdescription" readonly name="subjectdescription" value='+value.subjectDescription+' class="form-control"></td>';
                markup += '<td><input type="button" data-id='+value.id+'  class="btn btn-danger delete-updaterow" value="delete">';
                markup += "</tr>"
                $("#tblsubject").append(markup);
            });
        });
    }

</script>
