@model SERP.Core.Entities.FrontOffice.VisitorBook

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<section class="content-header">
    <h1>
        Visitor Book Details
    </h1>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Create Visitor</h3>
                    <div class="col-md-12">
                        <div class="col-md-10">
                            <a class="btn btn-primary pull-right" onclick="GetRecordList()">
                                <i class="fa fa-list-ul"></i>
                                List
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a class="btn btn-primary pull-left" onclick="NewAcademicMaster()">
                                <i class="fa fa-plus-square"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form method="post" data-ajax="true" data-ajax-method="post"
                      asp-action="Create" asp-controller="VistorBookDetail" data-ajax-success="Success">
                    <div class="box-body">
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="CreatedBy" />
                                <input type="hidden" asp-for="CreatedDate" />
                                <label asp-for="PersonName">Person Name</label>
                                <input type="text" asp-for="PersonName" class="form-control" />
                                <span asp-validation-for="PersonName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="PersonPhone">Person Phone</label>
                                <input asp-for="PersonPhone" class="form-control" />
                                <span asp-validation-for="PersonPhone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="NumberOfPerson">Number Of Person</label>
                                <input asp-for="NumberOfPerson" class="form-control" />
                                <span asp-validation-for="NumberOfPerson" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="ToWhoomToMeet">To Whoom meeet</label>
                                <input asp-for="ToWhoomToMeet" class="form-control" />
                                <span asp-validation-for="ToWhoomToMeet" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="InDateTime">In Date Time</label>
                                <input asp-for="InDateTime" class="form-control datePicker">
                                <span asp-validation-for="InDateTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="OutDateTime">Out Date Time</label>
                                <input asp-for="OutDateTime" class="form-control datePicker">
                                <span asp-validation-for="OutDateTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Purpose">Purpose</label>
                                <textarea asp-for="Purpose" class="form-control"></textarea>
                                <span asp-validation-for="Purpose" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="PersonAddress">Person Address</label>
                                <textarea asp-for="PersonAddress" class="form-control"></textarea>
                                <span asp-validation-for="PersonAddress" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    

                    <div class="box-footer">
                        <div class="col-md-8">
                            @Html.SERPButton("btn btn-primary pull-right btnSubmit", Model == null ? 0 : Model.Id)
                            <button class="buttonload" style="display:none">
                                <i class="fa fa-refresh fa-spin"></i>Loading
                            </button>
                        </div>
                        <div class="col-md-4">
                            <button type="reset" class="btn btn-danger pull-left">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @await Html.PartialAsync("~/Views/Shared/_CommanModalPartial.cshtml")
    </div>
</section>

<script type="text/javascript">
    function GetRecordList() {
        GetCustomRecord("/VistorBookDetail/GetList");
        setTimeout(function () {
            $("#modalTitle").text("Visitor Book List")
        }, 300);
    }
    function NewAcademicMaster() {
        var url = "/VistorBookDetail/Index";
        NewCustomRecord(url);
    }

</script>