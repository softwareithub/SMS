@model IEnumerable<SERP.Core.Entities.Transport.StopageModel>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">


                    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Stopage Name</th>
                                <th>Address</th>
                                <th>Route Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" data-lat="@data.Latituide" data-long="@data.Longitude" data-address="@data.PLaceAddress" class="clsSelectStopage" value="@data.Id" />
                                    </td>
                                    <td>
                                        @data.StopageName
                                    </td>
                                    <td>
                                        @data.PLaceAddress
                                    </td>
                                   <td>
                                       <select class="form-control clsStopage">
                                           <option value="Start">Start</option>
                                           <option value="ZEnd">End</option>
                                           <option value="Stopage1">Stopage1</option>
                                           <option value="Stopage2">Stopage2</option>
                                           <option value="Stopage3">Stopage3</option>
                                           <option value="Stopage4">Stopage4</option>
                                           <option value="Stopage5">Stopage5</option>
                                           <option value="Stopage6">Stopage6</option>
                                           <option value="Stopage7">Stopage7</option>
                                           <option value="Stopage8">Stopage8</option>
                                           <option value="Stopage9">Stopage9</option>
                                           <option value="Stopage10">Stopage10</option>
                                           <option value="Stopage11">Stopage11</option>
                                       </select>
                                   </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

                <div class="col-md-12">
                    <input type="button" class="btn btn-success pull-right" onclick="Add()" value="Add Stopage" />
                </div>
            </div>
        </div>
    </div>
</section>
