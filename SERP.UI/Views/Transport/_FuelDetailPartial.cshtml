@model IEnumerable<SERP.Core.Model.Transport.VehicleFuelModel>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">


                    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Vehicle Name</th>
                                <th>Vehicle Number</th>
                                <th>Fuel Date</th>
                                <th>Fuel Quantity</th>
                                <th>Fuel Rate</th>
                                <th>Total Amount</th>
                                <th>Reciept Number</th>
                                <th>Reciept Image</th>
                                <th>Remarks</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                            <tr>
                                <td>
                                    @data.VehicleName

                                </td>
                                <td>
                                    @data.VehicleNumber
                                </td>
                                <td>
                                    @data.FuelDate.ToShortDateString()
                                </td>
                                <td>
                                    @data.Quantity
                                </td>
                                <td>
                                    @data.Rate
                                </td>
                                <td>

                                    @{ var totalQuantity = data.Quantity * data.Rate;}
                                    @totalQuantity
                                </td>
                                <td>
                                    @data.ReciptNumber
                                </td>
                                <td>
                                    @Html.SerpImageHelper(data.RecieptImage, 25, 25, "RecieptImage")
                                </td>
                                <td>
                                    @data.Remark
                                </td>
                                <td>
                                    <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="UpdateRecord(@data.Id, this)">
                                        <i class="fa fa-edit" style="color:#3C8DBC"></i>

                                    </a>

                                    <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="DeleteRecord(@data.Id, this)">
                                        <i class="fa fa-trash" style="color:#DD4B39"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    function DeleteRecord(id, event) {
        var geturl = "/FuelDetail/GetList";
        var deleteUrl = "/FuelDetail/Delete";
        CustomDeleteRecord(id, geturl, deleteUrl, event);
    }
    function UpdateRecord(id, event) {
        var updateUrl = "/FuelDetail/Index";
        UpdateCustomRecord(id, updateUrl, event);
    }
</script>
