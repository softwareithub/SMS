@model IEnumerable<SERP.Core.Model.TransactionViewModel.EmployeeAttendenceVm>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">


                    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Employee Name</th>
                                <th>Employee Code</th>
                                <th>Image</th>
                                <th>Attendence Type</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" value="@data.EmployeeId" checked name="empId" />
                                    </td>
                                    <td>
                                        @data.EmployeeName
                                    </td>
                                    <td>
                                        @data.EmployeeCode
                                    </td>
                                    <td>
                                       @Html.SerpImageHelper(data.Image,50,50,"img")
                                    </td>
                                    <td>
                                        <select class="form-control" name="AttendType" asp-for="@data.AttendenceType">
                                            <option value="P">Present</option>
                                            <option value="HL">Holiday</option>
                                            <option value="A">Absent</option>
                                        </select>
                                    </td>
                                   
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    function DeleteRecord(id, event) {
        var geturl = "/AcademicMaster/GetAcademicList";
        var deleteUrl = "/AcademicMaster/DeleteRecord";
        CustomDeleteRecord(id, geturl, deleteUrl, event);
    }
    function UpdateRecord(id, event) {
        var updateUrl = "/AcademicMaster/Index";
        UpdateCustomRecord(id, updateUrl, event);
    }
</script>

