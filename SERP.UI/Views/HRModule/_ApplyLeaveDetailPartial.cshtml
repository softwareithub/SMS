@model IEnumerable<SERP.Core.Model.HRModel.LeaveTransactionVm>

<style>
    .dot {
        height: 7px;
        width: 7px;
        background-color: #DD4B39;
        border-radius: 50%;
        display: inline-block;
    }
</style>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
            
                <div class="col-md-12">
                    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Leave Name</th>
                                <th>From Date</th>
                                <th>To Date</th>
                                <th>Reason</th>
                                <th>
                                    Leave Status
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>
                                        @data.LeaveName
                                    </td>
                                    <td>
                                        @data.FromDate.ToShortDateString()
                                    </td>
                                    <td>
                                        @data.ToDate.ToShortDateString()
                                    </td>

                                    <td>
                                        @data.ReasonForLeave
                                    </td>
                                    <td>
                                        <span style="color:#ff6a00" class="dot"></span>
                                        @data.LeaveStatus
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="GetMoreInfo(@data.LeaveId, this)">
                                            <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                        </a>

                                        <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="UpdateRecord(@data.LeaveId, this)">
                                            <i class="fa fa-edit" style="color:#3C8DBC"></i>
                                        </a>

                                        <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="DeleteRecord(@data.LeaveId, this)">
                                            <i class="fa fa-trash" style="color:#DD4B39"></i>

                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/_CommanModalPartial.cshtml")
</section>

<script>


</script>