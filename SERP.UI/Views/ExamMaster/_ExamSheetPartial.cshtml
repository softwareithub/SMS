@model IEnumerable<SERP.Core.Model.ExamModel.ExamSheetVm>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">


                    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Exam Name</th>
                                <th>Course Name</th>
                                <th>Batch Name</th>
                                <th>Subject Name</th>
                                <th>Exam Date</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Inviligitator</th>
                                <th>Max Marks</th>
                                <th>Pass Marks</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>
                                        @data.ExamName
                                    </td>
                                    <td>
                                        @data.CourseName
                                    </td>
                                    <td>
                                        @data.BatchName
                                    </td>
                                    <td>
                                        @data.SubjectName
                                    </td>
                                    <td>
                                        @{
                                            var examDate = Convert.ToDateTime(data.ExamDate).ToShortDateString();
                                        }
                                        @examDate
                                    </td>
                                    <td>
                                        @data.StartTime
                                    </td>
                                    <td>
                                        @data.EndTime
                                    </td>
                                    <td>
                                        @data.TeacherName
                                    </td>
                                    <td>
                                        @data.MaxMark
                                    </td>
                                    <td>
                                        @data.PassMark
                                    </td>

                                    <td>
                                        <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="UpdateRecord(@data.ExamId, this)">
                                            <i class="fa fa-edit" style="color:#3C8DBC"></i>

                                        </a>

                                        <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="DeleteRecord(@data.ExamId, this)">
                                            <i class="fa fa-trash" style="color:#DD4B39"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    function DeleteRecord(id, event) {
        var geturl = "/ExamSheet/GetTimeSheet";
        var deleteUrl = "/ExamSheet/DeleteExamSheet";
        CustomDeleteRecord(id, geturl, deleteUrl, event);
    }
    function UpdateRecord(id, event) {
        var updateUrl = "/ExamSheet/Index";
        UpdateCustomRecord(id, updateUrl, event);
        setTimeout(function () {
            window.scrollTo(0, 0);
        }, 200)
    }

</script>