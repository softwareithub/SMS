@model IEnumerable<SERP.Core.Model.QuickSearchModel.StudentAttendenceReport>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<div class="col-md-12">
    <div class="box box-solid">
        <div class="box-header with-border">
            <i class="fa fa-text-width"></i>
            <h3 class="box-title">@ViewBag.HeaderDetail</h3>
        </div>

        <div class="box-body">
            <div class="col-md-12">
                <div class="box box-widget widget-user-2">
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Year</label>
                                <select class="form-control" id="ddlYear">
                                    <option value="0">Select</option>
                                    @for (int i = 2020; i < 2025; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Month</label>
                                <select class="form-control" id="ddlMonth" onchange="GetAttandenceReport()">
                                    <option value="0">Select</option>
                                    @for (int i = 1; i < 13; i++)
                                    {
                                        string monthName = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(@i);
                                        <option value="@i">@monthName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer no-padding">
                        <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Attandence count</th>
                                    <th>Attandence Type</th>
                                    <th>Month Name</th>
                                    <th>Year</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.AttandenceCount
                                        </td>
                                        <td>
                                            @item.AttandenceType
                                        </td>
                                        <td>
                                            @item.AttandenceMonth
                                        </td>
                                        <td>
                                            @item.AttandenceYear
                                        </td>
                                    </tr>
                                }


                            </tbody>

                        </table>
                    </div>
                </div>
                <!-- /.widget-user -->
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#tblDataList").DataTable();
        }, 500)
    });


</script>