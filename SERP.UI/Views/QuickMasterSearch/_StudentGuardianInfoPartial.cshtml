@model IEnumerable<SERP.Core.Entities.Entity.Core.Master.GuardianMaster>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<div class="col-md-12">
    <div class="box box-solid">
        <div class="box-header with-border">
            <i class="fa fa-text-width"></i>
            <h3 class="box-title">@ViewBag.HeaderDetail</h3>
        </div>

        <div class="box-body">
            <div class="col-md-12">
                <div class="box box-widget widget-user-2">
                    <div class="box-footer no-padding">
                        <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Relationship</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.GuradianName
                                        </td>
                                        <td>
                                            @item.RelationShip
                                        </td>
                                        <td>
                                            @item.Phone
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @Html.SerpImageHelper(item.GuardianImage,50,50,"GuardianImage")
                                        </td>
                                    </tr>
                                }


                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#tblDataList").DataTable();
        }, 500)
    });


</script>