@model IEnumerable<SERP.Core.Model.ExamModel.StudentMarkAllocationVm>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<div class="col-md-12">
    <div class="box box-solid">
        <div class="box-header with-border">
            <i class="fa fa-text-width"></i>
            <h3 class="box-title">@ViewBag.HeaderDetail</h3>
        </div>

        <div class="box-body">
            <div class="col-md-12">
                <div class="box box-widget widget-user-2">
                    <div class="box-footer no-padding">
                        <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Subject Name</th>
                                    <th>Assigned Marks</th>
                                    <th>Lab Marks</th>
                                    <th>Max Marks</th>
                                    <th>Pass Marks</th>
                                    <th>Grade</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.SubjectName
                                        </td>
                                        <td>
                                            @item.AssignedMarks
                                        </td>
                                        <td>
                                            @item.LabMarks
                                        </td>
                                        <td>
                                            @item.MaxMarks
                                        </td>
                                        <td>
                                            @item.PassMark
                                        </td>
                                        <td>
                                            @item.Grade
                                        </td>
                                        <td>
                                            @item.Percentage
                                        </td>
                                    </tr>
                                }


                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#tblDataList").DataTable();
        }, 500)
    });


</script>