@model IEnumerable<SERP.Core.Model.LibraryManagement.BookIssueDetailModel>

    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Item Name</th>
                <th>Issue Date</th>
                <th>Expected Return Date</th>
                <th>Is Returned</th>
                <th>Issue To</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
        {
            <tr>
                <td>
                    @data.BookName
                </td>
                <td>
                    @data.BookItemName
                </td>
                <td>
                    @data.IssueDate.ToShortDateString()
                </td>
                <td>
                    @data.ExpectedReturnDate.ToShortDateString()
                </td>
                <td>
                    @if(data.ActualReturnDate.Year==1)
                    {
                        var days = (DateTime.Now.Date - data.IssueDate).TotalDays;
                        <span style="color:#ff6a00">@days Days Due</span>
                    }
                    else
                    {
                        @data.ActualReturnDate.ToShortDateString();
                    }
                </td>
                <td>
                    @data.IssueTo
                </td>
            </tr>
        }
        </tbody>

    </table>
