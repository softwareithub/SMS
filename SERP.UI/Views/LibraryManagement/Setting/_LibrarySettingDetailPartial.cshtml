@model IEnumerable<SERP.Core.Entities.LibraryManagement.LibrarySetting>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">


                    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Assign User</th>
                                <th>Issue Days</th>
                                <th>Re Isuue Time</th>
                                <th>Fine Amount</th>
                                <th>Is Fine Amount Fixed</th>
                                <th>Fine Amount Calcullated</th>
                                <th>Available Notification</th>
                                <th>
                                    Return Date Notification
                                </th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>
                                        @data.UserType
                                    </td>
                                    <td>
                                        @data.IssueDays
                                    </td>
                                    <td>
                                        @data.ReIssueTime
                                    </td>
                                    <td>
                                        @data.FineAmount
                                    </td>
                                    <td>
                                        @if(data.IsFineAmountFixed==1)
                                        {
                                            <span>Yes</span>
                                        }
                                        else
                                        {
                                            <span>No</span>
                                        }
                                        
                                    </td>
                                    <td>
                                        @data.FineAmountCalulateOn
                                    </td>
                                    <td>
                                        @if(data.AvailableNotification==1)
                                        {
                                            <span>Yes</span>
                                        }
                                        else
                                        {
                                            <span>No</span>
                                        }
                                    </td>
                                    <td>
                                      @if(data.ReturnDateNotification==1)
                                      {
                                          <span>Yes</span>
                                      }else
                                      {
                                          <span>No</span>
                                      }

                                    </td>
                                    <td>
                                        <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="UpdateRecord(@data.Id, this)">
                                            <i class="fa fa-edit" style="color:#3C8DBC"></i>

                                        </a>

                                        <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="DeleteRecord(@data.Id, this)">
                                            <i class="fa fa-trash" style="color:#DD4B39"></i>

                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    function DeleteRecord(id, event) {
        var geturl = "/LibrarySeting/GetDetails";
        var deleteUrl = "/LibrarySeting/Delete";
        CustomDeleteRecord(id, geturl, deleteUrl, event);
    }
    function UpdateRecord(id, event) {
        var updateUrl = "/LibrarySeting/Index";
        UpdateCustomRecord(id, updateUrl, event);
    }
</script>

