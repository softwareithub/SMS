@model IEnumerable<SERP.Core.Model.LibraryManagement.BookMasterModelVm>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">


                    <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Book Name</th>
                                <th>Category</th>
                                <th>Course</th>
                                <th>Subject</th>
                                <th>Author</th>
                                <th>Publisher</th>
                                <th>Language</th>
                                <th>Price Per Book</th>
                                <th>
                                    Total Book
                                </th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                            <tr>
                                <td>
                                    @data.BookName
                                </td>
                                <td>
                                    @data.CategoryName
                                </td>
                                <td>
                                    @data.CourseName
                                </td>
                                <td>
                                    @data.SubjectName
                                </td>
                                <td>
                                    @data.AuthorName
                                </td>
                                <td>
                                    @data.PublisherName
                                </td>
                                <td>
                                    @data.Language
                                </td>
                                <td>
                                    @data.CostPrice
                                </td>
                                <td>
                                    <a onclick="GetBookItemsVolumeDetail(@data.Id)"> @data.TotalCount
                                    </a>
                                  
                                </td>
                                <td>
                                    <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="UpdateRecord(@data.Id, this)">
                                        <i class="fa fa-edit" style="color:#3C8DBC"></i>

                                    </a>

                                    <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="DeleteRecord(@data.Id, this)">
                                        <i class="fa fa-trash" style="color:#DD4B39"></i>

                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    function DeleteRecord(id, event) {
        var geturl = "/BookMaster/GetBookDetail";
        var deleteUrl = "/Category/Delete";
        CustomDeleteRecord(id, geturl, deleteUrl, event);
    }
    function UpdateRecord(id, event) {
        var updateUrl = "/BookMaster/CreateBook";
        UpdateCustomRecord(id, updateUrl, event);
    }
    function GetBookItemsVolumeDetail(id) {
        $.get("/BookMaster/GetBookItems", { bookId: id }, function (data) {
            $("#bookItemDiv").html(data);
            $("#ModalBookItemDetail").modal('show');
        })
    }
</script>

