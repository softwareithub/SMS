@model IEnumerable<SERP.Core.Model.TransactionViewModel.StudentAttendenceVm>


    <section class="content">
        <form id="form" method="post" data-ajax="true" data-ajax-method="post"
              asp-action="UpSertAttendence" asp-controller="Attendence" data-ajax-success="Success"
              data-ajax-begin="CustomFormSubmitBegin" data-ajax-complete="CustomFormSubmitComplete">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">


                            <table id="tblDataList" class="table table-striped table-bordered responsive" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Student Name</th>
                                        <th>Registration</th>
                                        <th>Roll Code</th>
                                        <th>Image</th>
                                        <th>Attendence Type</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in Model)
                                    {
                                        <tr>
                                            <td>
                                                @data.Name
                                                <input type="hidden" name="studentId" value="@data.StudentId" />
                                                <input type="hidden" name="attendenceMark" value="@data.AttendenceMarkType"/>
                                            </td>
                                            <td>
                                                @data.RegistrationNumber
                                            </td>
                                            <td>
                                                @data.RollCode
                                            </td>
                                            <td>
                                                @Html.SerpImageHelper(data.StudentImage, 50, 50, "img")
                                            </td>
                                            <td>
                                                <select class="form-control" name="AttendType" asp-for="@data.AttendenceType">
                                                    <option value="P">Present</option>
                                                    <option value="HL">Holiday</option>
                                                    <option value="A">Absent</option>
                                                </select>
                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <input type="submit" class="btn btn-primary pull-right" value="Submit" />
            </div>
            </form>
    </section>
<script type="text/javascript">
    function DeleteRecord(id, event) {
        var geturl = "/AcademicMaster/GetAcademicList";
        var deleteUrl = "/AcademicMaster/DeleteRecord";
        CustomDeleteRecord(id, geturl, deleteUrl, event);
    }
    function UpdateRecord(id, event) {
        var updateUrl = "/AcademicMaster/Index";
        UpdateCustomRecord(id, updateUrl, event);
    }
</script>

